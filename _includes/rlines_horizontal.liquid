<div class="col mb-4">
    <a style="text-decoration: none;"
       href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
        <div class="card-rline h-100 hoverable">
            <div class="row no-gutters">
                <div class="col-md-12">
                    <div class="card-body">
                        <h3 class="card-title display-3">{{ project.importance }}</h3>
                        <p class="card-text lead"><strong>{{ project.subtitle }}</strong> <i class="arrow right"></i></p>
                        <p class="card-text">{{ project.description }} </p>

                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
