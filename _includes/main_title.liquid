{% if page.header == 'main' %}
    <div class="container">
        <div class="row justify-content-center pt-5 mt-0 mb-5 section-alt bg-full">
            <div class="col-lg col-md-8">
                <h3>{{ page.title }}</h3>
                <p class="lead mb-5 mt-sm-3">
                    {{ page.description }}
                </p>
            </div>
        </div>
    </div>
{% elsif page.header == 'simple' %}
    <div class="container">
        <div class="post-header mt-5">
            <h1 class="post-title">{{ page.title }}</h1>
            <p class="post-description">{{ page.description }}</p>
        </div>
        <hr>
    </div>
{% endif %}